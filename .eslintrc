{
  "extends": "airbnb-base",
  "parser":"babel-eslint",
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "comma-dangle": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "**/test/*.js"
        ]
      }
    ]
  }
}
